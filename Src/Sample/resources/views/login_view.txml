<?xml version="1.0" encoding ="UTF-8"?>
<App>
    <Head>
        <Font src="./resources/fonts/JetBrainsMono-Regular.ttf" size="16.0" name="JetbrainsMono" />
        <Style src="./resources/styles/styles.tss" />
        <Title>Trema sample - Login</Title>
        <WindowData fullscreen="false" />
    </Head>
    <Body>
        <StackSpace id="horizontalStackSpace">
            <WindowContainer id="credentials">
                <Image id="padlock" src="./resources/images/padlock.png"/>
                <Text id="credentialsText">Credentials</Text>
                <Text>Mail address:</Text>
                <TextInput id="mailAddress"/>
                <Text>Password:</Text>
                <TextInput id="password" type="password"/>
                <Checkbox id="rememberMe">Remember me</Checkbox>
                <Button id="loginButton">Login</Button>
            </WindowContainer>
        </StackSpace>
    </Body>
</App>